/ <% if @user.empty? %>

- html_attributes = {class: "form-control"}

= render 'shared/error_messages'

.row
  = form_for(@user) do |f|
    .form-group
      = f.label :name
      = f.text_field :name, html_attributes
    .form-group
      = f.label :email
      = f.email_field :email, html_attributes
    .form-group
      = f.label :password
      = f.password_field :password, html_attributes
    .form-group
      = f.label :password_confirmation, "Confirmation"
      = f.password_field :password_confirmation, html_attributes
    .form-group
      = f.submit "Create my account", class: ["btn", "btn-primary", html_attributes[:class]]